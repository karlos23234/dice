const capturer = new CCapture({ format: 'gif', workersPath: './', framerate: 30 });
capturer.start();

let frames = 60; // 2 վայրկյան animation
for (let i = 0; i < frames; i++) {
    cube.rotation.x = Math.sin(i/10) * 0.5 + Math.PI/2;
    cube.rotation.y = Math.cos(i/10) * 0.5 + Math.PI/2;
    renderer.render(scene, camera);
    capturer.capture(renderer.domElement);
}

capturer.stop();
capturer.save();
